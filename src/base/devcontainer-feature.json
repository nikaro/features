{
  "id": "base",
  "name": "base",
  "version": "1.0.0",
  "documentationURL": "https://github.com/nikaro/features/tree/main/src/base",
  "description": "My personal base settings/extenstions.",
  "options": {
    "debug": {
      "default": false,
      "description": "Enable debug logging.",
      "type": "boolean"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "GitHub.copilot"
      ],
      "settings": {
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        }
      }
    }
  }
}
