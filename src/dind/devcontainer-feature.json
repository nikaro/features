{
  "id": "dind",
  "version": "1.0.7",
  "name": "docker-in-docker",
  "documentationURL": "https://github.com/nikaro/devcontainer-features/tree/main/src/dind",
  "description": "",
  "options": {
    "version": {
      "default": "",
      "description": "Version to install. If not specified, the latest version will be installed.",
      "proposals": [
        "23.0.6"
      ],
      "type": "string"
    },
    "buildx_version": {
      "default": "",
      "description": "Version to install. If not specified, the latest version will be installed.",
      "proposals": [
        "0.10.4"
      ],
      "type": "string"
    },
    "username": {
      "default": "vscode",
      "description": "Username to add to the docker group.",
      "type": "string"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "installsAfter": [
    "ghcr.io/nikaro/devcontainer-features/packages"
  ],
  "entrypoint": "/dockerd-entrypoint.sh",
  "privileged": true,
  "containerEnv": {
    "DOCKER_BUILDKIT": "1"
  },
  "mounts": [
    {
      "source": "dind-var-lib-docker-${devcontainerId}",
      "target": "/var/lib/docker",
      "type": "volume"
    }
  ]
}
