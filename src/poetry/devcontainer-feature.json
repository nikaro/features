{
  "id": "poetry",
  "version": "1.0.0",
  "name": "poetry",
  "documentationURL": "https://github.com/nikaro/devcontainer-features/tree/main/src/poetry",
  "description": "Python packaging and dependency management made easy.",
  "options": {
    "poetry_version": {
      "default": "",
      "description": "Version to install. If not specified, the latest version will be installed.",
      "proposals": [
        "1.4.1"
      ],
      "type": "string"
    },
    "poetry_home": {
      "default": "/opt/poetry",
      "description": "Path to the poetry home directory.",
      "proposals": [
        "/usr/local/poetry"
      ],
      "type": "string"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/python",
    "ghcr.io/nikaro/devcontainer-features/packages",
    "ghcr.io/nikaro/devcontainer-features/pyenv"
  ]
}
