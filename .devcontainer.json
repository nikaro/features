{
  "name": "features",
  "image": "ghcr.io/nikaro/debian-devcontainer:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "foxundermoon.shell-format",
        "GitHub.copilot",
        "github.vscode-github-actions",
        "mads-hartmann.bash-ide-vscode",
        "redhat.vscode-yaml"
      ]
    }
  },
  "features": {
    "ghcr.io/nikaro/features/actionlint": {},
    "ghcr.io/nikaro/features/devcontainer-cli": {},
    "ghcr.io/nikaro/features/pre-commit": {
      "debug": true
    },
    "ghcr.io/nikaro/features/shellcheck": {},
    "ghcr.io/nikaro/features/shfmt": {}
  },
  "postCreateCommand": {
    "create-cache": "mkdir -p /home/vscode/.cache",
    "chown-cache": "sudo chown -R vscode:vscode /home/vscode/.cache"
  },
  "mounts": [
    {
      "source": "${localEnv:HOME}/.config/fish",
      "target": "/home/vscode/.config/fish",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.config/git",
      "target": "/home/vscode/.config/git",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.cache/pre-commit",
      "target": "/home/vscode/.cache/pre-commit",
      "type": "bind"
    }
  ]
}
