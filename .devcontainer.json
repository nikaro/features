{
  "name": "devcontainer-features",
  "image": "mcr.microsoft.com/devcontainers/base:alpine",
  "customizations": {
    "vscode": {
      "settings": {
        "json.schemas": [
          {
            "fileMatch": [
              "*/devcontainer-feature.json"
            ],
            "url": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainerFeature.schema.json"
          }
        ],
        "terminal.integrated.defaultProfile.linux": "fish",
        "terminal.integrated.defaultProfile.osx": "fish"
      },
      "extensions": [
        "EditorConfig.EditorConfig",
        "GitHub.copilot",
        "GitHub.vscode-github-actions",
        "redhat.vscode-yaml"
      ]
    }
  },
  "features": {
    "ghcr.io/nikaro/devcontainer-features/mkdir": {
      "directories": "/home/vscode/.config",
      "owner": "vscode:vscode"
    },
    "ghcr.io/nikaro/devcontainer-features/packages": {
      "packages": "curl,fish,git,jq,npm,shellcheck,vim"
    },
    "ghcr.io/nikaro/devcontainer-features/github-cli": {},
    "ghcr.io/nikaro/devcontainer-features/shfmt": {}
  },
  "updateContentCommand": {
    "devcontainer-cli": "sudo npm install -g @devcontainers/cli",
    "gh-poi": "gh extension install seachicken/gh-poi"
  },
  "mounts": [
    "source=${localEnv:HOME}/.config/fish,target=/home/vscode/.config/fish,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/git,target=/home/vscode/.config/git,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/gcloud,target=/home/vscode/.config/gcloud,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ]
}
